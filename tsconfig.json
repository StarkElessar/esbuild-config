{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "NodeNext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "NodeNext",
		"noImplicitAny": false,
		"declaration": true,  // Генерация .d.ts файлов
		"declarationMap": true,  // Генерация source maps для типов
		"emitDeclarationOnly": true  // Генерация только типов, без компиляции .js файлов
	},
	"include": [
		"./src/**/*.ts",
	],
	"exclude": [
		"node_modules"
	],
}